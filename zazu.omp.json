{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "console_title_template": "{{.Folder}}{{if .Root}} :: root{{end}} :: {{.Shell}}",
    "final_space": true,
    "version": 2,
    "blocks": [
      {
        "alignment": "left",
        "segments": [
          {
            "background": "transparent",
            "foreground": "#1E90FF",
            "template": "\uf061  ",
            "style": "plain",
            "type": "path"
          }
        ],
        "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "foreground": "#fff",
          "template": " \uf64f {{ .CurrentDate | date .Format }} ",
          "properties": {
            "time_format": "15:04"
          },
          "style": "diamond",
          "type": "time"
        },
        {
          "foreground": "#DCDCDC",
          "style": "plain",
          "template": " \ueba2 <#00ff2a>{{ round .PhysicalPercentUsed .Precision }}</>% \uf85a <00ff2a>{{ (div ((sub .PhysicalTotalMemory .PhysicalFreeMemory)|float64) 1000000000.0) }}/{{(div .PhysicalTotalMemory 1000000000.0) }}</>gb",
          "type": "sysinfo"
        }
      ],
      "type": "prompt"
  }
    ],
    "transient_prompt": {
      "background": "transparent",
      "foreground": "#DCDCDC",
      "template": "\uf061 <#778899>{{ .PWD }} </>"
    }

  }